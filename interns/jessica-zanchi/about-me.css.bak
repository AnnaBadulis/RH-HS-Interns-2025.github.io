@font-face {
    font-family: titlefont;
    src: url("fonts/rushford-clean-font/rushford.otf");
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background-color: #f0f0f0;
    font-size: 16px;
    font-family: "Arial Narrow", Helvetica, sans-serif;
    overflow-x: hidden;
}

#splashscreen {
    background-image: url("images/prettycadobg.png");
    background-size: cover;
    background-position: top;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
}

#titlestuff {
    padding: 0 30px;
    width: 60%;
    color: white;
}

#titlestuff h1 {
    font-family: titlefont, sans-serif;
    font-size: 80pt;
    letter-spacing: 10px;
}

#titlestuff h2 {
    font-size: 24pt;
    margin-top: 10px;
}

#bodycontent {
    background-color: white;
    width: 100vw;
    height: 50vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

#bodycontent h1 {
    font-size: 30pt;
    font-family: titlefont, sans-serif;
    color: #333;
}
